  <div id="carouselExampleControls" class="carousel slide sliderMain" data-ride="carousel">
        <div class="carousel-inner">

             {{#each post}}
        
                <div class="carousel-item" data-slides>
                    <img class="d-block w-100 img-fluid slideS" src="{{img}}"   alt="{{id}} slide">
                    <div class="carousel-caption">
                        <h4 class="display-4"> {{titulo}}</h4>
                        <p class="previa">
                         {{post}}
                        </p>
                        <a href="post/{{id}}" class="btn btn-success">Saiba Mais</a>
                    </div>
                </div>
            
            {{/each}}
          
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
  </div>
  <dir class="container">
      <h1 class="text-center"> <i class="fa fa-paw" aria-hidden="true"></i> Postagens</h1>

    <div class="posts">

        {{#each post}}

            <div class="border text-center newP">
                <img src="{{img}}" class="img-fluid" alt="">
                <div class="card-header">
                    {{titulo}}
                </div>
                <div class="card-body">
                    <a href="/post/{{id}}" class="btn btn-success mb-3">Continue lendo</a>
                </div>
            </div>

            
        {{/each}}


    </div>

  </dir>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 text-center sobre">
        <h3>Sobre</h3>
        <p>
            Um blog Com NodeJs e Mysql.
        </p>
        </div>
        <div class="parallax-window col-md-6" data-parallax="scroll" data-image-src="/img/blog.jpg">
        </div>
    </div>

</div>
<div class="container-fluid newsletter">
    
   <h2 class="text-center ">
        Newsletter
   </h2>

<div class="input-group mb-3 newsletterForm">
    
    
  <div class="input-group-prepend">

                 <form action="/" method="POST">
 
          <button class="btn btn-outline-success pl-5 pr-5 " id="newsletter" type="submit">Enviar</button>
        
            </div>
            <input type="email" name='email'  
            {{#if error}} autofocus {{/if}} 
            {{#if success}} autofocus {{/if}} 
            class="form-control" 
            placeholder="Deixe seu E-mail para receber Novidades" aria-label="" 
            aria-describedby="basic-addon1" required>
        </form> 
          
   </div>

    <div style="width: 50%; margin:auto;">
        
        {{#if error}}
        <div class="alert alert-warning text-center">{{error}}</div>
        {{/if}}
        {{#if success}}
        <div class="alert alert-success text-center">{{success}}</div>
        {{/if}}
        
        
    </div>
 
 
</div>

